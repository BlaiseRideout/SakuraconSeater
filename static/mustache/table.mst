{{ #LoggedIn }}
	<button id="addtable" onClick="addTable();">Add Table</button>
{{ /LoggedIn }}
{{#tables}}
	<div class="table{{ #Playing }} playing{{ /Playing }}{{ #Overtime }} warn{{ /Overtime }}" data-id="{{ Id }}" data-started="{{ Started }}"{{ #x }} data-x="{{ x }}"{{ /x }}{{ #y }} data-y="{{ y }}"{{ /y }}>
		<h2>
			Table {{ Id }}
			{{ #LoggedIn }}
				<button class="delete" onClick="deleteTable({{ Id }});">&times;</button>
			{{ /LoggedIn}}
		</h2>
		<div class="duration">{{ Duration }}</div>
		<ul class="players">
			{{#Players}}
				<li class="player" data-id="{{ Id }}" id="player-{{ Id }}">
					<span class="name">{{ Name }}</span>
					{{ #LoggedIn }}
						<i class="fa fa-pencil" onClick="editPlayer({{ Id }});"></i>
						<button class="delete" onClick="deletePlayer({{ Id }});">&times;</button>
						{{ #HasPhone }}
							<button class="notify" onClick="notifyPlayer({{ Id }});">ðŸ“±</button>
						{{ /HasPhone}}
					{{ /LoggedIn }}
				</li>
			{{/Players}}
		</ul>
		{{ #LoggedIn }}
			<div class="controls">
				{{ #Playing }}
					<button class="clearbutton" onClick="clearTable({{ Id }})">Clear</button>
				{{ /Playing}}
				{{ ^Playing }}
					<button class="startbutton" onClick="startTable({{ Id }});">Start</button>
					<button class="fillbutton" onClick="fillTable({{ Id }});">Fill</button>
					<button class="notifybutton" onClick="notifyTable({{ Id }});">Notify</button>
				{{ /Playing }}
			</div>
		{{ /LoggedIn }}
	</div>
{{/tables}}
